@model Ch6_HtmlHelper.Models.Member

@{
    ViewBag.Title = "會員註冊";
}

<h2>會員註冊</h2>

@using (Html.BeginForm())
{
    <p>
        帳號:@Html.TextBoxFor(model => model.UserId, new { @class = "form-control", required = "required" })
    </p>
    <p>
        密碼:@Html.PasswordFor(m => m.Pwd, new { @class = "form-control" })
    </p>
    <p>
        姓名:@Html.PasswordFor(m => m.Name, new { @class = "form-control" })
    </p>
    <p>
        信箱:@Html.PasswordFor(m => m.Email, new { @class = "form-control", type="email" })
    </p>
    <p>
        生日:@Html.PasswordFor(m => m.BirthDay, new { @class = "form-control", type="date" })
    </p>
    <p><input type="submit" value="註冊" class="btn btn-success" /></p>
    <hr />
    <p>@Html.Raw(ViewBag.Msg)</p>
}

